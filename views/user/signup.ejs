<%- include("../layout/layout")%>
<!-- /header -->
<% if (message.length) { %>
  <div class="alert alert-danger">
      <%= message %>
  </div>
  <% } %>
<section class="vh-100" style="background-color: #eee;">
  <div class="container h-100 mx-auto">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-lg-12 col-xl-11">
        <div class="card text-black" style="border-radius: 25px;">
          <div class="card-body p-md-5">
            <div class="row justify-content-center">
              <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">

                <p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">Sign up</p>

                <form class="mx-1 mx-md-4" id="signupForm" action="/signup" method="POST">

                  <div class="d-flex flex-row align-items-center mb-4">
                    <i class="fas fa-user fa-lg me-3 fa-fw"></i>
                    <div class="form-outline flex-fill mb-0">
                      <label>Name</label>
                      <input type="text" class="form-control" name="username">
                      <span class="error text-danger" id="usernameError"></span>
                    </div>
                  </div>

                  <div class="d-flex flex-row align-items-center mb-4">
                    <i class="fas fa-envelope fa-lg me-3 fa-fw"></i>
                    <div class="form-outline flex-fill mb-0">
                      <label>Email</label>
                      <input type="text" class="form-control" name="email">
                      <span class="error text-danger" id="emailError"></span>
                    </div>
                  </div>

                  <div class="d-flex flex-row align-items-center mb-4">
                    <i class="fas fa-lock fa-lg me-3 fa-fw"></i>
                    <div class="form-outline flex-fill mb-0">
                    <label>Password</label>
                    <input type="password" class="form-control" name="password">
                    <span class="error text-danger" id="passwordError"></span>
                  </div>
                  </div>

                  <div class="d-flex flex-row align-items-center mb-4">
                    <i class="fas fa-key fa-lg me-3 fa-fw"></i>
                    <div class="form-outline flex-fill mb-0">
                      <label>Phone</label>
                      <input type="text" class="form-control"  name="phone">
                      <span class="error text-danger" id="phoneError"></span>
                    </div>
                  </div>
                  <div class="d-flex flex-row align-items-center mb-4">
                    <i class="fas fa-gift fa-lg me-3 fa-fw"></i>
                    <div class="form-outline flex-fill mb-0">
                  <label for="referredCode">Referral Code:</label>
                  <input type="text" id="referredCode" name="referredCode" placeholder="Enter Referral Code">
                </div>
              </div>
                  <!-- <div class="form-check d-flex justify-content-center mb-5">
                    <input class="form-check-input me-2" type="checkbox" value="" id="form2Example3c" />
                    <label class="form-check-label" for="form2Example3">
                      I agree all statements in <a href="#!">Terms of service</a>
                    </label>
                  </div> -->

                  <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
                    <button type="submit" class="btn btn-primary btn-lg form-control">Submit</button>
                  </div>

                </form>
                <hr>
                <p class="mx-5">Already have an account? <a class="btn btn-secondary mx-5"   style="text-decoration: none; " href="/login">Login</a></p>
                
              </div>
              <div class="col-md-10 col-lg-6 col-xl-7 d-flex align-items-center order-1 order-lg-2">

                <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-registration/draw1.webp"
                  class="img-fluid" alt="Sample image">

              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<script>
  const form = document.getElementById('signupForm');

  form.addEventListener('submit', (event) => {
    let valid = true;

    // Reset error messages
    document.getElementById('usernameError').textContent = '';
    document.getElementById('emailError').textContent = '';
    document.getElementById('passwordError').textContent = '';
    document.getElementById('phoneError').textContent = '';

    // Validate first name (not empty)
    const username = form.elements['username'].value;
    if (username.trim() === '') {
      document.getElementById('usernameError').textContent = 'Please enter your first name.';
      valid = false;
    }

    // // Validate last name (not empty)
    // const lastName = form.elements['lastName'].value;
    // if (lastName.trim() === '') {
    //   document.getElementById('lastNameError').textContent = 'Please enter your last name.';
    //   valid = false;
    // }

    // Validate email (valid format)
    const email = form.elements['email'].value;
    const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
    if (!emailRegex.test(email)) {
      document.getElementById('emailError').textContent = 'Please enter a valid email address.';
      valid = false;
    }

    // Validate password (at least 8 characters)
    const password = form.elements['password'].value;
    if (password.length < 8) {
      document.getElementById('passwordError').textContent = 'Password must be at least 8 characters long.';
      valid = false;
    }

    // Validate phone (optional, if provided, it should be numeric)
    const phone = form.elements['phone'].value;
    if (phone.trim() === '' && !(/^\d+$/.test(phone))) {
    document.getElementById('phoneError').textContent = 'Please enter a valid phone number.';
    valid = false;
  }

    if (!valid) {
      event.preventDefault(); // Prevent form submission if validation fails
    }
  });
</script>
